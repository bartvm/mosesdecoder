# Based of Boost.Python examples' quickstart
using python : 2.7 : /usr/local/Cellar/python/2.7.6/bin/python ;

project pymoses : requirements
  <library>/python
  <linkflags>"-I/usr/local/Cellar/python/2.7.6/Frameworks/Python.framework/Versions/2.7/include/python2.7 -lpython2.7"
  <include>/usr/local/Cellar/python/2.7.6/Frameworks/Python.framework/Versions/2.7/lib/python2.7/site-packages/numpy/core/include
  ;

# Adding the <link>shared is VERY important
exe pymoses : Main.cpp ;

